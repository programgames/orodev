#!/usr/bin/env php
<?php

require  __DIR__ . '/../vendor/autoload.php';

use Programgames\OroDev\Command\CheckOroRequirementsCommand;
use Programgames\OroDev\Command\CheckPortCommand;
use Programgames\OroDev\Command\CheckSystemRequirementsCommand;
use Programgames\OroDev\Command\ServiceCommand;
use Symfony\Component\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;

$app = new Application('Oro dev tools');

$app->addCommands(
    [
        new CheckOroRequirementsCommand(),
        new CheckSystemRequirementsCommand(),
        new ServiceCommand(),
        new CheckPortCommand(),
    ]
);

$app->run(new ArgvInput($argv), new ConsoleOutput());
